<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false" bootstrap="phpunit.php" colors="true" processIsolation="false" stopOnFailure="false" cacheDirectory=".phpunit.cache">
    <testsuites>
        <testsuite name="Collection Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <directory suffix=".php">vendor</directory>
        </exclude>
    </source>
</phpunit>
